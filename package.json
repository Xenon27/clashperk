{
	"name": "clashperk",
	"version": "1.4.4",
	"author": "SUVAJIT (suvajit.me@gmail.com)",
	"license": "MIT",
	"description": "Clash of Clans Discord Bot",
	"main": "dist/src/index.js",
	"private": true,
	"scripts": {
		"build": "rimraf dist && tsc",
		"start": "pm2 start dist/src/index.js --name bot",
		"test": "eslint --ext .ts --ignore-path .gitignore .",
		"lint": "eslint --fix --ext .ts --ignore-path .gitignore .",
		"dev": "node --enable-source-maps dist/src/index.js",
		"build:commands": "node dist/scripts/index.js"
	},
	"dependencies": {
		"@clashperk/node": "github:clashperk/node",
		"@clashperk/quickchart": "github:clashperk/quickchart",
		"@grpc/grpc-js": "^1.3.2",
		"@grpc/proto-loader": "^0.5.5",
		"@sentry/node": "^5.30.0",
		"chalk": "^4.1.0",
		"clashofclans.js": "^1.4.1",
		"common-tags": "^1.8.0",
		"discord-akairo": "github:clashperk/discord-akairo",
		"discord-api-types": "^0.12.1",
		"discord.js": "^12.5.3",
		"dotenv": "^8.2.0",
		"moment": "^2.29.1",
		"moment-duration-format": "^2.3.2",
		"mongodb": "^3.6.5",
		"ms": "^2.1.2",
		"node-fetch": "^2.6.1",
		"shelljs": "^0.8.4"
	},
	"devDependencies": {
		"@types/common-tags": "^1.8.0",
		"@types/moment-duration-format": "^2.2.2",
		"@types/mongodb": "^3.6.10",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.14.16",
		"@types/node-fetch": "^2.5.7",
		"@types/shelljs": "^0.8.8",
		"@typescript-eslint/eslint-plugin": "^4.11.0",
		"@typescript-eslint/parser": "^4.11.0",
		"eslint": "^7.14.0",
		"eslint-config-marine": "^8.0.1",
		"exceljs": "^4.2.1",
		"rimraf": "^2.7.1",
		"typescript": "^4.1.3"
	},
	"engines": {
		"node": ">=14.x"
	},
	"eslintConfig": {
		"extends": "marine/node",
		"rules": {
			"no-warning-comments": 0,
			"no-process-env": 0,
			"no-inline-comments": 0,
			"@typescript-eslint/naming-convention": 0,
			"@typescript-eslint/no-floating-promises": 0,
			"@typescript-eslint/no-misused-promises": 0
		}
	}
}
