{
	"name": "clashperk",
	"version": "1.4.6",
	"author": "SUVAJIT (suvajit.me@gmail.com)",
	"license": "MIT",
	"description": "Clash of Clans Discord Bot",
	"main": "dist/src/index.js",
	"types": "index.d.ts",
	"private": true,
	"scripts": {
		"build": "rimraf dist && tsc",
		"start": "pm2 start dist/src/index.js --name bot",
		"test": "eslint --ext .ts --ignore-path .gitignore .",
		"lint": "eslint --fix --ext .ts --ignore-path .gitignore .",
		"dev": "node --enable-source-maps dist/src/index.js",
		"deploy": "node dist/scripts/index.js"
	},
	"dependencies": {
		"@clashperk/quickchart": "github:clashperk/quickchart",
		"@grpc/grpc-js": "^1.3.7",
		"@grpc/proto-loader": "^0.5.6",
		"@sentry/integrations": "^6.11.0",
		"@sentry/node": "^6.11.0",
		"chalk": "^4.1.2",
		"clashofclans.js": "^1.5.2",
		"common-tags": "^1.8.0",
		"discord-akairo": "github:csuvajit/discord-akairo#main",
		"discord.js": "^13.1.0",
		"dotenv": "^10.0.0",
		"exceljs": "^4.2.1",
		"moment": "^2.29.1",
		"moment-duration-format": "^2.3.2",
		"mongodb": "^4.1.0",
		"ms": "^2.1.3",
		"node-fetch": "^2.6.1",
		"shelljs": "^0.8.4",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/common-tags": "^1.8.1",
		"@types/moment-duration-format": "^2.2.3",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.17.9",
		"@types/node-fetch": "^2.5.12",
		"@types/shelljs": "^0.8.9",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^4.29.1",
		"@typescript-eslint/parser": "^4.29.1",
		"eslint": "^7.32.0",
		"eslint-config-marine": "^8.3.2",
		"rimraf": "^2.7.1",
		"typescript": "^4.3.5"
	},
	"engines": {
		"node": ">=14.x"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": "marine/node",
		"rules": {
			"no-warning-comments": 0,
			"no-process-env": 0,
			"no-inline-comments": 0,
			"@typescript-eslint/naming-convention": 0,
			"@typescript-eslint/no-floating-promises": 0,
			"@typescript-eslint/no-misused-promises": 0
		}
	},
	"imports": {
		"#scripts/*": "./scripts/*.js"
	}
}
