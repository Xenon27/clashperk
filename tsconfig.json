{
	"compilerOptions": {
		"lib": [
			"ES2020",
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol"
		],
		"paths": {
			"#scripts/*": ["scripts/*"]
		},
		"pretty": true,
		"strict": true,
		"outDir": "dist",
		"rootDir": "./",
		"baseUrl": "./",
		"sourceRoot": "/",
		"sourceMap": true,
		"target": "ES2020",
		"module": "CommonJS",
		"inlineSources": true,
		"declaration": false,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"scripts",
		"src"
	]
}